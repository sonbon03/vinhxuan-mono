{
  "version": 2,
  "name": "vinhxuan-admin",
  "buildCommand": "cd ../.. && yarn install && cd apps/frontend && yarn build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "cd ../.. && yarn install",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
