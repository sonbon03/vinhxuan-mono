# JWT Configuration
# Note: JWT_ACCESS_EXPIRY and JWT_REFRESH_EXPIRY are now hardcoded in src/config/constants.config.ts
# Legacy JWT secrets (not used with RSA256, kept for backwards compatibility)
JWT_ACCESS_SECRET=dev_access_secret_key_change_in_production
JWT_REFRESH_SECRET=dev_refresh_secret_key_change_in_production

# RSA256 Keys (Recommended - more secure than symmetric keys)
# Option 1: Store raw PEM format (replace \n with actual newlines or use \\n)
# JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIJ...\n-----END PRIVATE KEY-----"
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nMIIB...\n-----END PUBLIC KEY-----"

# Option 2: Store base64-encoded keys (prefix with base64:)
# JWT_PRIVATE_KEY=base64:LS0tLS1CRUdJTi...
# JWT_PUBLIC_KEY=base64:LS0tLS1CRUdJTi...

# Generate RSA keys:
# openssl genrsa -out jwt-private.key 4096
# openssl rsa -in jwt-private.key -pubout -out jwt-public.key
#
# To base64 encode (for .env):
# base64 -i jwt-private.key | tr -d '\n'
# base64 -i jwt-public.key | tr -d '\n'

# Fallback: If JWT_PRIVATE_KEY and JWT_PUBLIC_KEY are not set,
# the system will try to load from files: apps/backend/keys/jwt-private.key and jwt-public.key

# CORS (Update with your frontend URLs)
CORS_ORIGIN=http://localhost:3000,http://localhost:3005

